{
  "manifest_version": 3,
  "name": "Referral Bro",
  "version": "1.2",
  "description": "Overlay referral contacts on job boards.",
  "permissions": [
    "storage"
  ],
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.linkedin.com/*",
        "https://www.naukri.com/*",
        "https://www.indeed.com/*",
        "https://www.glassdoor.com/*",
        "https://www.glassdoor.co.in/*",
        "https://wellfound.com/*",
        "https://angel.co/*"
      ],
      "js": [
        "utils/constants.js",
        "utils/utils.js",
        "modules/messaging.js",
        "content/content.js"
      ],
      "css": [
        "styles/injection.css",
        "styles/messaging.css"
      ]
    }
  ],
  "background": {
    "service_worker": "background/background.js"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
{
  "manifest_version": 3,
  "name": "Referral Bro",
  "version": "1.0",
  "description": "Overlay referral contacts on job boards.",
  "permissions": [
    "storage",
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "https://www.linkedin.com/*",
    "https://www.naukri.com/*",
    "https://www.indeed.com/*",
    "https://www.glassdoor.com/*",
    "https://www.glassdoor.co.in/*",
    "https://wellfound.com/*",
    "https://angel.co/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.linkedin.com/*",
        "https://www.naukri.com/*",
        "https://www.indeed.com/*",
        "https://www.glassdoor.com/*",
        "https://www.glassdoor.co.in/*",
        "https://wellfound.com/*",
        "https://angel.co/*"
      ],
      "js": [
        "content.js"
      ],
      "css": [
        "injection.css"
      ]
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}